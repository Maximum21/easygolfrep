<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scoring"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x_normal_font_size"
        android:textAllCaps="true"
        style="@style/bold"
        android:layout_gravity="center"
        />
    <com.minhhop.easygolf.widgets.chart.ScoreChartView
        android:id="@+id/chartScore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/d_15"
        android:layout_marginEnd="@dimen/d_15"
        />
</LinearLayout>