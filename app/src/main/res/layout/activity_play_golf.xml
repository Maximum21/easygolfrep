<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/viewRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/containerMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background_toolbar_play_golf"
        />
    <com.minhhop.easygolf.presentation.custom.DistanceGolfView
        android:id="@+id/distanceStartView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        />
    <com.minhhop.easygolf.presentation.custom.DistanceGolfView
        android:id="@+id/distanceEndView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/btBackHole"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_v1"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/peekHeightPlayGolf"
            android:layout_marginStart="@dimen/normal_margin"
            />

        <ImageView
            android:id="@+id/btNextHole"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_next_v1"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/peekHeightPlayGolf"
            android:layout_marginEnd="@dimen/normal_margin"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btNextHole"
            android:layout_marginBottom="@dimen/peekHeightPlayGolf"
            android:paddingEnd="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:background="@drawable/background_button_support_golf"
            >
            <ImageView
                android:id="@+id/iconViewGreen"
                android:layout_width="@dimen/button_woz_size"
                android:layout_height="@dimen/button_woz_size"
                android:padding="10dp"
                android:src="@drawable/ic_icon_view_green"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:layout_gravity="center"
                android:background="@drawable/background_woz_golf"
                />

            <FrameLayout
                android:id="@+id/wozGolfButton"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="@dimen/button_woz_size"
                android:layout_height="@dimen/button_woz_size"
                android:background="@drawable/background_woz_golf"
                >
                <ImageView
                    android:id="@+id/emptyScore"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_icon_scoreee"
                    android:contentDescription="@null"
                    android:layout_margin="@dimen/small_margin"
                    android:padding="3dp"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/valueScore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    style="@style/bold"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_double_point"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottomToolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/toolbarBack"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/format_par"
                style="@style/normal"
                android:textSize="@dimen/normal_font_size"
                android:layout_gravity="bottom"
                android:textColor="@color/colorWhite"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/small_margin"
                style="@style/bold"
                android:textSize="@dimen/large_font_size"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/format_handicap"
                style="@style/normal"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@color/colorWhite"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/normal_margin"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bold"
                android:textSize="@dimen/large_font_size"
                android:layout_marginStart="@dimen/small_margin"
                android:textColor="@color/colorWhite"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtCurrentDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bold"
                android:textSize="@dimen/large_font_size"
                android:textColor="@color/textColorHintLight"
                android:layout_marginStart="@dimen/normal_margin"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFormatDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yards"
                style="@style/normal"
                android:layout_gravity="bottom"
                android:textColor="@color/textColorHintLight"
                android:layout_marginStart="@dimen/small_margin"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/viewMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_mask"
            android:visibility="gone"
            />
        <com.minhhop.easygolf.presentation.custom.EasyGolfToolbar
            android:id="@+id/toolbarBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isDoubleTap="true"
            app:layout_constraintTop_toTopOf="parent"
            >
            <LinearLayout
                android:id="@+id/containerTextHole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_font_size"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/shape"
                    style="@style/normal"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textDropdownHole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/huge_font_size"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    app:drawableEndCompat="@drawable/ic_arrow_drop_down_white"
                    style="@style/bold"
                    android:layout_marginStart="@dimen/small_margin"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/actionMenuMore"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                app:srcCompat="@drawable/ic_icon_more"
                android:contentDescription="@null"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/normal_margin"
                android:layout_gravity="end"
                />
        </com.minhhop.easygolf.presentation.custom.EasyGolfToolbar>

        <com.minhhop.easygolf.widgets.WozViewDistance
            android:id="@+id/wozDistanceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomToolbarView"
            android:layout_marginTop="@dimen/normal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.minhhop.easygolf.widgets.course.ChangTeeView
        android:id="@+id/viewChangeListTee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/color_mask"
        />

    <com.minhhop.easygolf.presentation.golf.hole.ListHoleView
        android:id="@+id/listHoleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <com.minhhop.easygolf.presentation.golf.component.menu.MenuMoreView
        android:id="@+id/menuMore"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="invisible"
        />
    <include layout="@layout/layout_loading_map" />
    <RelativeLayout
        android:id="@+id/viewMaskBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_mask"
        android:visibility="gone"
        />
    <!-- include bottom sheet -->
    <include layout="@layout/bottom_sheet_golf" />

    <RelativeLayout
        android:id="@+id/layoutLoadingLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <com.minhhop.easygolf.widgets.ViewGreenLayout
        android:id="@+id/viewPhotoGreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>