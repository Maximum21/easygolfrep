<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewRoot"
    android:paddingBottom="@dimen/d_10"
    android:background="@drawable/round_corners_background_white">
    <com.minhhop.easygolf.presentation.custom.EasyGolfHeaderNavigation
        android:id="@+id/easyGolfHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_marginTop="@dimen/d_10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/d_15"
            android:id="@+id/back_btn"
            android:src="@drawable/ic_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginStart="@dimen/d_15"
            app:layout_constraintBottom_toBottomOf="@+id/back_btn"
            app:layout_constraintStart_toEndOf="@+id/back_btn"
            app:layout_constraintTop_toTopOf="@+id/back_btn"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:text="@string/post_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/post_detail_options_iv"
            android:src="@drawable/ic_icon_more"
            android:layout_marginEnd="@dimen/d_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back_btn"
            app:layout_constraintBottom_toBottomOf="@+id/back_btn"
            android:layout_width="@dimen/d_35"
            android:layout_height="@dimen/d_35"/>
    </com.minhhop.easygolf.presentation.custom.EasyGolfHeaderNavigation>
    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/d_10"
        app:layout_constraintBottom_toTopOf="@+id/post_comment_profile_iv"
        app:layout_constraintTop_toBottomOf="@+id/easyGolfHeader"
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.minhhop.easygolf.presentation.custom.EasyGolfNewsFeedView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/d_10"
                android:layout_marginEnd="@dimen/d_15"
                android:layout_marginStart="@dimen/d_15"
                android:id="@+id/post_profile_iv_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/post_profile_iv_layout1"
                android:layout_height="wrap_content"/>
            <com.minhhop.easygolf.presentation.custom.EasyGolfNewsFeedView
                android:layout_width="0dp"
                android:paddingStart="@dimen/d_10"
                android:paddingEnd="@dimen/d_10"
                android:visibility="gone"
                android:background="@drawable/round_corners_gray_borders_background_transparent"
                android:layout_marginBottom="@dimen/d_10"
                android:id="@+id/post_profile_iv_layout1"
                app:layout_constraintEnd_toEndOf="@+id/post_profile_iv_layout"
                app:layout_constraintStart_toStartOf="@+id/post_profile_iv_layout"
                app:layout_constraintBottom_toTopOf="@+id/new_post_tag_heading"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/new_post_tag_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags: "
                android:layout_marginBottom="@dimen/d_20"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/post_details_inner_post_view"
                app:layout_constraintStart_toStartOf="@id/post_profile_iv_layout" />


            <TextView
                android:id="@+id/new_post_tag_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_5"
                android:text=""
                android:textColor="@color/color_link"
                android:textSize="12sp"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="@+id/post_profile_iv_layout"
                app:layout_constraintBottom_toBottomOf="@id/new_post_tag_heading"
                app:layout_constraintStart_toEndOf="@id/new_post_tag_heading"
                app:layout_constraintTop_toTopOf="@id/new_post_tag_heading" />

            <androidx.constraintlayout.widget.Group
                android:visibility="gone"
                app:constraint_referenced_ids="new_post_tag_heading,new_post_tag_value"
                app:layout_constraintEnd_toEndOf="@+id/new_post_tag_value"
                app:layout_constraintStart_toStartOf="@+id/new_post_tag_heading"
                app:layout_constraintTop_toTopOf="@+id/new_post_tag_heading"
                app:layout_constraintBottom_toBottomOf="@+id/new_post_tag_heading"
                android:id="@+id/post_tags_group"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <include
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/share_post_tv"
                app:layout_constraintBottom_toTopOf="@+id/like_post_iv"
                app:layout_constraintStart_toStartOf="@id/post_profile_iv_layout"
                layout="@layout/share_post_row_layout"
                android:id="@+id/post_details_inner_post_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/like_post_iv"
                android:layout_width="@dimen/d_20"
                android:layout_height="@dimen/d_20"
                android:layout_marginBottom="@dimen/d_20"
                android:src="@drawable/ic_icon_like_black"
                app:layout_constraintBottom_toTopOf="@+id/comment_list_headaer_tv"
                app:layout_constraintStart_toStartOf="@id/post_profile_iv_layout" />

            <TextView
                android:gravity="bottom"
                android:id="@+id/like_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_5"
                android:text="@string/like"
                android:textColor="@color/textColorGray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/like_post_iv"
                app:layout_constraintStart_toEndOf="@id/like_post_iv" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="@dimen/d_10"
                android:id="@+id/liked_by_recyclerview"
                android:layout_marginEnd="@dimen/d_20"
                app:layout_constraintTop_toTopOf="@+id/like_post_tv"
                app:layout_constraintEnd_toStartOf="@+id/share_post_iv"
                app:layout_constraintBottom_toBottomOf="@+id/like_post_tv"
                app:layout_constraintStart_toEndOf="@+id/like_post_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/post_like_group"
                app:layout_constraintBottom_toBottomOf="@id/like_post_iv"
                app:layout_constraintEnd_toEndOf="@id/like_post_tv"
                app:layout_constraintTop_toTopOf="@id/like_post_iv"
                app:layout_constraintStart_toStartOf="@+id/like_post_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/post_like_group_list"
                app:layout_constraintBottom_toBottomOf="@id/liked_by_recyclerview"
                app:layout_constraintEnd_toEndOf="@id/liked_by_recyclerview"
                app:layout_constraintTop_toTopOf="@id/liked_by_recyclerview"
                app:layout_constraintStart_toStartOf="@+id/liked_by_recyclerview"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/comment_post_iv"
                android:layout_width="@dimen/d_20"
                android:layout_height="@dimen/d_30"
                android:paddingTop="@dimen/d_10"
                android:layout_marginBottom="@dimen/d_20"
                android:src="@drawable/comment_icon_gray"
                app:layout_constraintBottom_toTopOf="@+id/comment_list_headaer_tv"
                app:layout_constraintEnd_toStartOf="@id/comment_post_tv"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/like_post_tv" />

            <TextView
                android:paddingTop="@dimen/d_10"
                android:id="@+id/comment_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_5"
                android:text="@string/comment"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/like_post_iv"
                app:layout_constraintEnd_toStartOf="@id/share_post_iv"
                app:layout_constraintStart_toEndOf="@id/comment_post_iv"
                app:layout_constraintTop_toTopOf="@id/like_post_iv" />

            <androidx.constraintlayout.widget.Group
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:constraint_referenced_ids="comment_post_iv,comment_post_tv"
                android:id="@+id/post_comment_group"
                app:layout_constraintBottom_toBottomOf="@+id/comment_post_iv"
                app:layout_constraintEnd_toEndOf="@id/comment_post_tv"
                app:layout_constraintTop_toTopOf="@id/comment_post_iv"
                app:layout_constraintStart_toStartOf="@+id/comment_post_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_marginEnd="@dimen/d_5"
                android:id="@+id/share_post_iv"
                android:layout_width="@dimen/d_20"
                android:layout_height="@dimen/d_20"
                android:layout_marginBottom="@dimen/d_20"
                android:rotation="180"
                android:rotationX="180"
                app:tint="@color/textColorGray"
                android:src="@drawable/ic_share_post_icon_green"
                app:layout_constraintBottom_toTopOf="@+id/comment_list_headaer_tv"
                app:layout_constraintEnd_toStartOf="@id/share_post_tv" />

            <TextView
                android:id="@+id/share_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_5"
                android:text="@string/share"
                android:textColor="@color/textColorGray"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/like_post_iv"
                app:layout_constraintEnd_toEndOf="@id/post_profile_iv_layout"
                app:layout_constraintTop_toTopOf="@id/like_post_iv" />

            <androidx.constraintlayout.widget.Group
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/post_share_group"
                app:layout_constraintBottom_toBottomOf="@id/share_post_iv"
                app:layout_constraintEnd_toEndOf="@id/share_post_tv"
                app:layout_constraintTop_toTopOf="@id/share_post_iv"
                app:layout_constraintStart_toStartOf="@+id/share_post_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:layout_marginBottom="@dimen/d_10"
                android:layout_marginTop="@dimen/d_10"
                android:id="@+id/comment_list_headaer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/comments_recylerview_post_detail"
                app:layout_constraintStart_toStartOf="@id/like_post_iv"/>

            <TextView
                android:id="@+id/comment_count_list_headaer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_5"
                android:text="(0)"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/comment_list_headaer_tv"
                app:layout_constraintStart_toEndOf="@id/comment_list_headaer_tv"
                app:layout_constraintTop_toTopOf="@id/comment_list_headaer_tv" />
            <androidx.constraintlayout.widget.Group
                android:visibility="gone"
                app:constraint_referenced_ids="comment_count_list_headaer_tv,comment_list_headaer_tv"
                android:id="@+id/comment_list_count_group"
                app:layout_constraintEnd_toEndOf="@+id/comment_count_list_headaer_tv"
                app:layout_constraintTop_toTopOf="@+id/comment_list_headaer_tv"
                app:layout_constraintStart_toStartOf="@+id/comment_list_headaer_tv"
                app:layout_constraintBottom_toBottomOf="@+id/comment_list_headaer_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="@dimen/d_10"
                android:id="@+id/comments_recylerview_post_detail"
                app:layout_constraintStart_toStartOf="@+id/like_post_iv"
                app:layout_constraintEnd_toEndOf="@id/share_post_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





    <androidx.constraintlayout.widget.Group
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/comment_etv"
        app:layout_constraintBottom_toBottomOf="@id/comment_etv"
        app:layout_constraintStart_toStartOf="@id/comment_etv"
        app:layout_constraintEnd_toEndOf="@id/comment_etv"
        android:id="@+id/edit_cover_grup"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="@dimen/d_20"
        app:layout_constraintTop_toTopOf="@+id/comment_etv"
        app:layout_constraintBottom_toBottomOf="@+id/comment_etv"
        android:id="@+id/post_comment_profile_iv"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:textSize="12sp"
        android:id="@+id/comment_etv"
        app:layout_constraintBottom_toTopOf="@+id/keyboard"
        app:layout_constraintStart_toEndOf="@+id/post_comment_profile_iv"
        app:layout_constraintEnd_toStartOf="@+id/post_comment_btn"
        android:padding="@dimen/d_15"
        android:gravity="start"
        android:layout_marginBottom="@dimen/d_10"
        android:textColorHint="@color/textColorGray"
        android:hint="@string/add_a_comment"
        android:layout_marginEnd="@dimen/d_10"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginTop="@dimen/d_20"
        android:background="@drawable/round_corners_gray_borders_background_transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/post_comment_btn"
        android:padding="2dp"
        android:layout_marginEnd="@dimen/d_20"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        app:tint="@color/dynamic_native_color"
        android:src="@drawable/ic_icon_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comment_etv"
        app:layout_constraintBottom_toBottomOf="@+id/comment_etv"
        />
    <RelativeLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>