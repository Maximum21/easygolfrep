<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corners_gray_background">
    <ScrollView
        android:layout_marginBottom="@dimen/d_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_background_white">

            <com.minhhop.easygolf.presentation.custom.EasyGolfHeaderNavigation
                android:id="@+id/easyGolfHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/d_15"
                    android:layout_marginTop="@dimen/d_15"
                    android:src="@drawable/ic_icon_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/settings_act_user_profile_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/d_10"
                    android:src="@drawable/ic_icon_user_default"
                    app:layout_constraintBottom_toBottomOf="@+id/back_btn"
                    app:layout_constraintStart_toEndOf="@+id/back_btn"
                    app:layout_constraintTop_toTopOf="@+id/back_btn" />

                <TextView
                    android:id="@+id/user_profile_name_main_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_15"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/user_profile_member_id_tv"
                    app:layout_constraintStart_toEndOf="@+id/settings_act_user_profile_iv"
                    app:layout_constraintTop_toTopOf="@+id/settings_act_user_profile_iv"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/user_profile_member_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_15"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/settings_act_user_profile_iv"
                    app:layout_constraintStart_toEndOf="@+id/settings_act_user_profile_iv"
                    app:layout_constraintTop_toBottomOf="@+id/user_profile_name_main_tv"
                    app:layout_constraintVertical_chainStyle="packed" />

                <com.minhhop.easygolf.presentation.custom.countdown.EasyGolfCountDown
                    android:id="@+id/countDownFriends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:gravity="start|bottom"
                    app:layout_constraintEnd_toStartOf="@id/countDownFollowing"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/settings_act_user_profile_iv"
                    app:titleCountDown="@string/friends" />

                <com.minhhop.easygolf.presentation.custom.countdown.EasyGolfCountDown
                    android:id="@+id/countDownFollowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    app:layout_constraintBottom_toBottomOf="@+id/countDownFriends"
                    app:layout_constraintEnd_toStartOf="@id/countDownHandicap"
                    app:layout_constraintStart_toEndOf="@id/countDownFriends"
                    app:layout_constraintTop_toTopOf="@id/countDownFriends"
                    app:titleCountDown="Following" />

                <com.minhhop.easygolf.presentation.custom.countdown.EasyGolfCountDown
                    android:id="@+id/countDownHandicap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@+id/countDownFollowing"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/countDownFollowing"
                    app:layout_constraintTop_toTopOf="@id/countDownFollowing"
                    app:titleCountDown="@string/handicap" />
            </com.minhhop.easygolf.presentation.custom.EasyGolfHeaderNavigation>

            <com.minhhop.easygolf.presentation.custom.EasyGolfButton
                app:layout_constraintTop_toBottomOf="@+id/easyGolfHeader"
                android:layout_marginStart="@dimen/d_10"
                app:textButton="@string/add_friend"
                android:layout_marginEnd="@dimen/d_10"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/btnFriends"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.Group
                android:visibility="gone"
                app:constraint_referenced_ids="btnFriends,btnFollow"
                android:id="@+id/buttons_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
            <com.minhhop.easygolf.presentation.custom.EasyGolfButton
                app:layout_constraintTop_toBottomOf="@+id/easyGolfHeader"
                android:layout_marginStart="@dimen/d_10"
                android:layout_marginEnd="@dimen/d_10"
                app:textButton="@string/follow"
                app:isThemePrimary="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                android:id="@+id/btnFollow"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/gray_background_group"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/d_15"
                android:background="@drawable/top_round_corners_gray_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnFriends"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/user_profile_feed_post_title"
                android:layout_margin="@dimen/d_15"
                app:layout_constraintTop_toTopOf="@+id/gray_background_group"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="Feed Post"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/feedPostFwdArrow"
                android:src="@drawable/baseline_arrow_forward_ios_black_24"
                android:layout_marginEnd="@dimen/d_15"
                app:layout_constraintTop_toTopOf="@+id/user_profile_feed_post_title"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_feed_post_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_15"
                app:tint="@color/colorDarkBlue" />

            <include
                android:id="@+id/include_feed_row"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_feed_post_title"
                android:layout_margin="@dimen/d_15"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/news_feed_row_layout"
                />

            <androidx.constraintlayout.widget.Group
                android:background="@drawable/round_corners_background_white"
                app:layout_constraintTop_toTopOf="@+id/include_feed_row"
                app:layout_constraintStart_toStartOf="@+id/include_feed_row"
                app:layout_constraintEnd_toEndOf="@+id/include_feed_row"
                app:layout_constraintBottom_toBottomOf="@+id/include_feed_row"
                android:visibility="visible"
                app:constraint_referenced_ids="news_feed_row_empty_iv,now_posts_to_show_tv"
                android:id="@+id/add_user_feed_post_group"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_marginTop="@dimen/d_15"
                android:layout_marginBottom="@dimen/d_10"
                android:src="@drawable/ic_nodata"
                android:id="@+id/news_feed_row_empty_iv"
                app:layout_constraintBottom_toTopOf="@+id/now_posts_to_show_tv"
                app:layout_constraintTop_toTopOf="@+id/include_feed_row"
                app:layout_constraintStart_toStartOf="@+id/include_feed_row"
                app:layout_constraintEnd_toEndOf="@+id/include_feed_row"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/now_posts_to_show_tv"
                android:textColor="@color/textColorGray"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/d_10"
                android:text="@string/no_posts_to_show"
                app:layout_constraintStart_toStartOf="@+id/include_feed_row"
                app:layout_constraintEnd_toEndOf="@+id/include_feed_row"
                app:layout_constraintBottom_toBottomOf="@+id/include_feed_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_profile_round_history_title"
                android:layout_margin="@dimen/d_15"
                app:layout_constraintTop_toBottomOf="@+id/include_feed_row"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="@string/round_history"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/RHFwdArrow"
                android:src="@drawable/baseline_arrow_forward_ios_black_24"
                android:layout_marginEnd="@dimen/d_15"
                app:layout_constraintTop_toTopOf="@+id/user_profile_round_history_title"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_round_history_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_15"
                app:tint="@color/colorDarkBlue" />
            <include
                android:id="@+id/include_round_history_row"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_round_history_title"
                android:layout_margin="@dimen/d_15"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/round_row_for_user"
                />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/add_user_round_group"
                android:background="@drawable/round_corners_background_white"
                app:layout_constraintTop_toTopOf="@+id/include_round_history_row"
                app:layout_constraintStart_toStartOf="@+id/include_round_history_row"
                app:layout_constraintEnd_toEndOf="@+id/include_round_history_row"
                app:layout_constraintBottom_toBottomOf="@+id/include_round_history_row"
                android:visibility="visible"
                app:constraint_referenced_ids="history_row_empty_iv,no_history_to_show_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_marginTop="@dimen/d_15"
                android:layout_marginBottom="@dimen/d_10"
                android:src="@drawable/ic_nodata"
                android:id="@+id/history_row_empty_iv"
                app:layout_constraintBottom_toTopOf="@+id/no_history_to_show_tv"
                app:layout_constraintTop_toTopOf="@+id/include_round_history_row"
                app:layout_constraintStart_toStartOf="@+id/include_round_history_row"
                app:layout_constraintEnd_toEndOf="@+id/include_round_history_row"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/no_history_to_show_tv"
                android:textColor="@color/textColorGray"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/d_10"
                android:text="@string/no_round_history_to_show"
                app:layout_constraintStart_toStartOf="@+id/include_round_history_row"
                app:layout_constraintEnd_toEndOf="@+id/include_round_history_row"
                app:layout_constraintBottom_toBottomOf="@+id/include_round_history_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/user_profile_stats_title"
                android:layout_margin="@dimen/d_15"
                app:layout_constraintTop_toBottomOf="@+id/include_round_history_row"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="@string/statistic"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/baseline_arrow_forward_ios_black_24"
                android:layout_marginEnd="@dimen/d_15"
                app:layout_constraintTop_toTopOf="@+id/user_profile_stats_title"
                app:layout_constraintBottom_toBottomOf="@+id/user_profile_stats_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_15"
                app:tint="@color/colorDarkBlue" />
            <include
                android:id="@+id/include_round_statistics_row"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_stats_title"
                android:layout_margin="@dimen/d_15"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                layout="@layout/statistics_row_layout"
                />
            <androidx.constraintlayout.widget.Group
                android:id="@+id/user_details_statistics_group"
                android:background="@drawable/round_corners_background_white"
                app:layout_constraintTop_toTopOf="@+id/include_round_statistics_row"
                app:layout_constraintStart_toStartOf="@+id/include_round_statistics_row"
                app:layout_constraintEnd_toEndOf="@+id/include_round_statistics_row"
                app:layout_constraintBottom_toBottomOf="@+id/include_round_statistics_row"
                android:visibility="visible"
                app:constraint_referenced_ids="statistics_row_empty_iv,no_stats_to_show_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_marginTop="@dimen/d_15"
                android:layout_marginBottom="@dimen/d_10"
                android:src="@drawable/ic_nodata"
                android:id="@+id/statistics_row_empty_iv"
                app:layout_constraintBottom_toTopOf="@+id/no_stats_to_show_tv"
                app:layout_constraintTop_toTopOf="@+id/include_round_statistics_row"
                app:layout_constraintStart_toStartOf="@+id/include_round_statistics_row"
                app:layout_constraintEnd_toEndOf="@+id/include_round_statistics_row"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/no_stats_to_show_tv"
                android:textColor="@color/textColorGray"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/d_20"
                android:text="@string/no_data_to_show"
                app:layout_constraintStart_toStartOf="@+id/include_round_statistics_row"
                app:layout_constraintEnd_toEndOf="@+id/include_round_statistics_row"
                app:layout_constraintBottom_toBottomOf="@+id/include_round_statistics_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_round_statistics_row"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_25"/>

            <TextView
                android:id="@+id/user_profile_followers_title"
                android:layout_margin="@dimen/d_15"
                app:layout_constraintTop_toBottomOf="@+id/include_round_statistics_row"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="@string/followers"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/recyclerviewBg"
                android:layout_marginBottom="@dimen/d_30"
                app:layout_constraintBottom_toBottomOf="@+id/gray_background_group"
                android:layout_marginTop="@dimen/d_15"
                android:background="@drawable/round_corners_background_white"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_followers_title"
                android:layout_marginEnd="@dimen/d_15"
                app:layout_constraintStart_toStartOf="@+id/user_profile_followers_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="70dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingStart="@dimen/d_15"
                android:paddingBottom="@dimen/d_10"
                android:layout_marginEnd="@dimen/d_15"
                android:id="@+id/followers_recyclerviw"
                app:layout_constraintEnd_toStartOf="@+id/followers_tv"
                app:layout_constraintTop_toTopOf="@+id/recyclerviewBg"
                app:layout_constraintStart_toStartOf="@+id/recyclerviewBg"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerviewBg"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/followers_tv"
                android:textColor="@color/colorDarkBlue2"
                android:background="@drawable/round_gros_nes_circle_bg"
                android:layout_marginEnd="@dimen/d_10"
                app:layout_constraintEnd_toEndOf="@+id/recyclerviewBg"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerviewBg"
                app:layout_constraintTop_toTopOf="@+id/recyclerviewBg"
                android:layout_width="@dimen/d_50"
                android:layout_height="@dimen/d_30"/>
            <androidx.constraintlayout.widget.Group
                android:visibility="gone"
                android:id="@+id/followers_group"
                app:constraint_referenced_ids="followers_recyclerviw,recyclerviewBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/viewRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>