<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/viewRoot"
    android:layout_marginBottom="@dimen/small_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_20"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/create_post_image_row_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@color/colorWhite"
        android:padding="@dimen/d_2"
        app:layout_constraintStart_toStartOf="@+id/create_post_image_row_close_iv"
        app:layout_constraintBottom_toBottomOf="@+id/create_post_image_row_close_iv"
        app:layout_constraintEnd_toEndOf="@+id/create_post_image_row_close_iv"
        app:layout_constraintTop_toTopOf="@+id/create_post_image_row_close_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"/>
    <ImageView
        android:backgroundTint="@color/colorWhite"
        android:padding="@dimen/d_2"
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginEnd="@dimen/d_15"
        app:tint="@color/color_flag_red"
        android:id="@+id/create_post_image_row_close_iv"
        android:src="@drawable/ic_close_icon_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="17dp"
        android:layout_height="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
