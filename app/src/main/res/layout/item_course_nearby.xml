<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingBottom="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <ImageView
        android:id="@+id/imgCourse"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_image"
        tools:targetApi="lollipop"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        android:background="@drawable/background_bottom_course_huge"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/txtNameCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.WozFont"
            android:textColor="@color/colorTitle"
            android:textSize="15sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.minhhop.easygolf.presentation.support.StarRattingView
                    android:id="@+id/layoutRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtPointRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorHint"
                    android:textSize="11sp"
                    tools:ignore="SmallSp"
                    />

                <View
                    android:id="@+id/viewDiver"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/colorHint"
                    />

                <TextView
                    android:id="@+id/txtNearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorHint"
                    android:textSize="11sp"
                    tools:ignore="SmallSp"
                    />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>