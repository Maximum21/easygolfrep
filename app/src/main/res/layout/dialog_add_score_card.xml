<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/bg_border_white"
    android:paddingStart="35dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="25dp"
    >

    <ImageView
        android:id="@+id/btClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_close_task"
        android:layout_gravity="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hole"
                    android:textColor="@color/colorTextNormal"
                    android:textAppearance="@style/AppTheme.WozFont"
                    android:gravity="center"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/txtHole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/AppTheme.WozFont.Bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/format_par"
                    android:textColor="@color/colorTextNormal"
                    android:textAppearance="@style/AppTheme.WozFont"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    />

                <TextView
                    android:id="@+id/txtPar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/AppTheme.WozFont.Bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/format_ls"
                    android:textColor="@color/colorTextNormal"
                    android:textAppearance="@style/AppTheme.WozFont"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    />

                <TextView
                    android:id="@+id/txtSL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/AppTheme.WozFont.Bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:minWidth="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strokes"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                >
                <ImageView
                    android:id="@+id/btMinusStroke"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_minus"
                    />
                <TextView
                    android:id="@+id/txtStrokes"
                    android:layout_width="wrap_content"
                    android:minWidth="40dp"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_input_score"
                    />
                <ImageView
                    android:id="@+id/btPlusStroke"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_plus"
                    />
            </LinearLayout>



        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDiver"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:minWidth="70dp"
                android:layout_height="wrap_content"
                android:text="@string/putts"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                >

                <ImageView
                    android:id="@+id/btMinusPutt"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_minus_gray"
                    />
                <TextView
                    android:id="@+id/txtPutts"
                    android:layout_width="wrap_content"
                    android:minWidth="40dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/bg_input_score_gray"
                    />

                <ImageView
                    android:id="@+id/btPlusPutt"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_plus_gray"
                    />


            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDiver"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                >


                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_icon_plus"
                    />


            </LinearLayout>


            <TextView
                android:minWidth="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                />



        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDiver"
            />
    </LinearLayout>



    <Button
        android:id="@+id/btSubmit"
        android:layout_marginTop="25dp"
        android:layout_width="@dimen/button_submit_width"
        android:layout_height="@dimen/button_submit_height"
        android:background="@drawable/background_submit_selector"
        android:text="@string/save"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/AppTheme.WozFont"
        android:enabled="true"
        />

</LinearLayout>