<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/d_10"
    android:layout_marginBottom="@dimen/margin_bottom_item_chat"
    android:layout_marginEnd="@dimen/d_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/d_5"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutPhoto"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"
        android:layout_height="@dimen/height_default_image_chat"
        app:cardCornerRadius="@dimen/d_10"
        >
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:transitionName="TRANSITION_PHOTO_NAME"
            />
        <ProgressBar
            android:id="@+id/loadingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtDate"
        android:layout_marginTop="@dimen/d_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_gray_chat"
        android:textSize="12sp"
        android:paddingTop="@dimen/d_5"
        android:paddingBottom="@dimen/d_5"
        android:paddingStart="@dimen/d_10"
        android:paddingEnd="@dimen/d_10"
        app:layout_constraintTop_toBottomOf="@id/layoutPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>