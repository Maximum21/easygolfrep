<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollHomeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="@dimen/normal_margin"
                    android:id="@+id/toolbarSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="0dp"
                    >
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/small_padding"
                        android:textColorHint="@color/textColorDark"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/normal_font_size"
                        android:hint="@string/search_courses"
                        app:drawableStartCompat="@drawable/ic_location_pin"
                        android:drawablePadding="@dimen/small_padding"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        style="@style/normal"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/course_nearby"
                    android:textSize="@dimen/title_font_size"
                    android:textColor="@color/textColorDark"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    app:autoSizeMaxTextSize="@dimen/title_font_size"
                    style="@style/bold"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/normal_margin"
                    android:id="@+id/listClubNearby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recommend"
                    android:textSize="@dimen/title_font_size"
                    android:textColor="@color/textColorDark"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    app:autoSizeMaxTextSize="@dimen/title_font_size"
                    style="@style/bold"
                    android:layout_marginBottom="@dimen/normal_margin"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listHome"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.minhhop.easygolf.presentation.burn.BurnLoadingView
        android:layout_marginTop="@dimen/normal_margin"
        android:id="@+id/viewMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundMainGray"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/normal_margin"
            android:visibility="visible"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                />

            <View
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorLoading"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="@dimen/width_item_course_nearby"
                    android:layout_height="@dimen/height_item_course_nearby"
                    android:background="@drawable/background_border_white"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_marginStart="@dimen/normal_margin"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/normal_padding"
                        android:paddingEnd="@dimen/normal_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_alignParentBottom="true"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:background="@drawable/background_border_white"
                            android:backgroundTint="@color/colorLoading"
                            />
                        <View
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_width="150dp"
                            android:layout_height="15dp"
                            android:background="@drawable/background_border_white"
                            android:backgroundTint="@color/colorLoading"
                            />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_course_nearby"
                    android:background="@drawable/background_border_white"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_marginStart="@dimen/normal_margin"
                    />
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorLoading"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginBottom="@dimen/small_margin"
                android:padding="@dimen/normal_padding"
                >
                <View
                    android:layout_width="@dimen/size_img_item_course_width"
                    android:layout_height="@dimen/size_img_item_course_height"
                    android:background="@drawable/background_border_white"
                    android:backgroundTint="@color/colorLoading"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginBottom="@dimen/small_margin"
                android:padding="@dimen/normal_padding"
                >
                <View
                    android:layout_width="@dimen/size_img_item_course_width"
                    android:layout_height="@dimen/size_img_item_course_height"
                    android:background="@drawable/background_border_white"
                    android:backgroundTint="@color/colorLoading"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginBottom="@dimen/small_margin"
                android:padding="@dimen/normal_padding"
                >
                <View
                    android:layout_width="@dimen/size_img_item_course_width"
                    android:layout_height="@dimen/size_img_item_course_height"
                    android:background="@drawable/background_border_white"
                    android:backgroundTint="@color/colorLoading"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:background="@drawable/background_border_white"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginBottom="@dimen/small_margin"
                android:padding="@dimen/normal_padding"
                >
                <View
                    android:layout_width="@dimen/size_img_item_course_width"
                    android:layout_height="@dimen/size_img_item_course_height"
                    android:background="@drawable/background_border_white"
                    android:backgroundTint="@color/colorLoading"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />

                    <View
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/background_border_white"
                        android:backgroundTint="@color/colorLoading"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.minhhop.easygolf.presentation.burn.BurnLoadingView>

</FrameLayout>

